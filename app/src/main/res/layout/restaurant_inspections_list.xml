<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/inspectionNumNonCritical"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="20dp"
        android:text="@string/number_of_critical_issues"
        android:textColor="#000000"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/numNonCritical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="139dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/inspectionNumCritical"
        android:layout_width="222dp"
        android:layout_height="26dp"
        android:layout_below="@+id/inspectionNumNonCritical"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="168dp"
        android:text="@string/number_of_non_critical_issues"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/numCritical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inspectionNumNonCritical"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="153dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/timeSinceInspection"
        android:layout_width="156dp"
        android:layout_height="26dp"
        android:layout_below="@+id/inspectionNumCritical"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="235dp"
        android:text="@string/inspection_date"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/inspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inspectionNumCritical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="2dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="12sp" />


</RelativeLayout>
